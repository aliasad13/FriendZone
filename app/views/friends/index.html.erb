

<h1>Friends</h1>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Insta</th>
      <th>Email</th>
      <th>UserId</th>
      <th colspan="0"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
<% if friend.user == current_user %>
      <tr>
        <td><%= link_to friend.name,friend %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.insta %></td>
        <td><%= friend.email %></td>
        <td><%= friend.user_id %></td>
<!--        <td><%#= link_to 'Show', friend %></td>-->
<!--        <td><%#= link_to 'Edit', edit_friend_path(friend) %></td>-->
        <td><%= link_to 'Unfriend', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
<%end %>
    <% end %>
  </tbody>
</table>

<br>

